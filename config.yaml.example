server:
  port: ":8080"
  mode: "debug" # debug, release

database:
  driver: "sqlite" # sqlite, mysql
  dsn: "smsie.db"

serial:
  scan_interval: 5s
  exclude_ports:
    # - "COM1"
  init_at_commands:
    - "ATE0"
    - "AT+COPS=3,2"
    - "AT+CMGF=0" # PDU mode

calling:
  stun_servers:
    - "stun:stun.l.google.com:19302"
  udp_port_min: 40000
  udp_port_max: 40100
  audio:
    device_keyword: "AC Interface"
    output_device_name: ""
    sample_rate: 8000
    channels: 1
    bits_per_sample: 16
    capture_chunk_ms: 40
    playback_chunk_ms: 100

log:
  level: "info" # debug, info, warn, error
